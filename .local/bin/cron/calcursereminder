#!/usr/bin/python

import subprocess
import time
import sys

warn = 15

def get(command):
    return subprocess.check_output(command).decode("utf-8")

def convert(t):
    # convert set time into a calculate- able time
    return [int(n) for n in t.split(":")]

currtime = convert(time.strftime("%H:%M"))
events = [l.strip() for l in get(["calcurse", "-D", "/home/jah/.config/calcurse/", "-n"]).splitlines()][1:]


for event in events:
    if int(event[1:3]) == 0 and int(event[4:6]) < 15:
        subprocess.call(["notify-send", "ðŸ—¨ Appointment", event])
